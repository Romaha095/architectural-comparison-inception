{
  "experiment_name": "train_inception_resnet_v2_idc",
  "output_dir": "results/train_inception_resnet_v2",
  "seed": 42,
  "data": {
    "root_dir": "data/IDC",
    "img_size": 299,
    "batch_size": 64,
    "num_workers": 4,
    "pin_memory": true,
    "max_images_per_class_train": null,
    "max_images_per_class_val": null,
    "max_images_per_class_test": null
  },
  "model": {
    "pretrained": true,
    "freeze_backbone": false,
    "num_classes": 2
  },
  "optim": {
    "name": "adamw",
    "lr_head": 0.0005,
    "lr_backbone": 0.00005,
    "weight_decay": 0.0001
  },
  "scheduler": {
    "name": "none"
  },
  "training": {
    "num_epochs": 30,
    "device": "cuda",
    "mixed_precision": true,
    "early_stopping_patience": 7,
    "early_stopping_min_delta": 0.0

  },
  "logging": {
    "log_dir": "results/train_inception_resnet_v2/logs",
    "log_level": "INFO",
    "log_to_file": true
  }
}