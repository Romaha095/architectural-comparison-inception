{
  "experiment_name": "first_results_inception_v3_idc_subset",
  "output_dir": "results/first_results/inception_v3",

  "seed": 42,

  "data": {
    "root_dir": "data/IDC",
    "img_size": 299,
    "batch_size": 64,
    "num_workers": 4,
    "pin_memory": true,
    "max_images_per_class_train": 5000,
    "max_images_per_class_val": 2000,
    "max_images_per_class_test": 2000
  },


  "model": {
    "arch": "inception_v3",
    "num_classes": 2,
    "pretrained": true
  },

  "optim": {
    "name": "adam",
    "lr": 0.0003,
    "weight_decay": 0.0001
  },

  "scheduler": {
    "name": "none"
  },

  "training": {
    "num_epochs": 3,
    "device": "cuda",
    "mixed_precision": true
  },

  "logging": {
    "log_dir": "results/first_results/logs",
    "log_level": "INFO",
    "log_to_file": true
  }
}
